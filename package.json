{
  "name": "react-weather",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.1.1",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "dayjs": "^1.8.36",
    "lodash-es": "^4.17.21",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test --watchAll=false",
    "test:watch": "craco test",
    "coverage": "craco test --coverage --watchAll=false",
    "eject": "craco eject",
    "lint": "eslint src --ext js",
    "format": "prettier --write \"**/*.+(js|json|css|html)\"",
    "check": "prettier --check \"**/*.+(js|json|css|html)\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@tailwindcss/postcss7-compat": "^2.1.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^13.1.1",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-plugin-jest-dom": "^2.1.0",
    "eslint-plugin-react-hooks": "^2.5.1",
    "eslint-plugin-testing-library": "^3.9.0",
    "husky": "^3.1.0",
    "postcss": "^8.2.10",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.1.0",
    "tsutils": "^3.17.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && npm run lint && npm run format && npm run check && npm run test"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "src/components/*.tsx",
      "!<rootDir>/node_modules/**/*",
      "!<rootDir>/src/setupTests*"
    ],
    "coverageReporters": [
      "html",
      "lcov"
    ],
    "moduleNameMapper": {
      "lodash-es/debounce": "<rootDir>/src/__mocks__/lodash.debounce.mock.js"
    },
    "testMatch": [
      "**/__tests__/*.js"
    ]
  }
}
